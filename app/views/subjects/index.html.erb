<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>

<table class ="table table-striped" id="myTable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Standard</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.standard_id%></td>
        <td><%= link_to 'Show', subject %></td>
        <%if current_user.role=="teacher"%>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.role=="teacher"%>
<%= link_to 'New Subject', new_subject_path %>
<% end %>

<%= link_to 'Back',standards_path, class:"btn btn-primary"%>

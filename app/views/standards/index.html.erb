<p id="notice"><%= notice %></p>

<h1>Listing Standards</h1>

<table class ="table table-striped" id="myTable">
  <thead>
    <tr>
      <th>Standard</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @standards.each do |standard| %>
      <tr>
        <td><%=link_to standard.standard ,standard_path(standard.id)%></td>

        <td><%= link_to 'Show', standard %></td>
        <%if current_user.role=="teacher"%>
        <td><%= link_to 'Edit', edit_standard_path(standard) %></td>
        <td><%= link_to 'Destroy', standard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.role=="teacher"%>
<%= link_to 'New Standard', new_standard_path,class:"btn btn-primary" %>
<%end %>

<%= link_to "Subjects", subjects_path, class:"btn btn-primary"%>


